# Copy this file and rename it to `.env` and customize the values.
# Both the Tailscale sidecar and the Project Zomboid server read from it.

########################
# Tailscale configuration
########################

# Required: Tailscale auth key for this server.
# Create one in the Tailscale admin console (preferably a reusable auth key
# with appropriate tags / ACLs for game servers).
TS_AUTHKEY=tskey-auth-REPLACE_ME

# Optional: extra arguments passed to `tailscale up`.
# Common examples:
#   --advertise-exit-node
#   --advertise-routes=192.168.1.0/24
#   --accept-dns=false
# TS_EXTRA_ARGS=--accept-routes

###############################
# Project Zomboid server basics
###############################

# Basic server identity
SERVER_NAME=My Zomboid Server
SERVER_PUBLIC_NAME=My Zomboid Server
SERVER_DESCRIPTION=My Cool server that my friends will only play for 2 days and then leave

# Server access
# PASSWORD is the in‑game server password (not your Steam password).
PASSWORD=changeme_server_password

# RCON remote console password. Used by admin tools that connect over RCON.
RCON_PASSWORD=changeme_rcon_password

# In‑game admin account created on first run.
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme_admin_password

# Gameplay basics
PVP=true
PAUSE_EMPTY=true # Pause game time if no players are connected
GLOBAL_CHAT=true

# Let the container auto‑generate `servertest.ini` from these env vars
# on first run.
GENERATE_SETTINGS=true
